<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/row_ten_truyen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tam Quoc Dien Nghia"
            android:ellipsize="end"
            android:textColor="@color/white"
            android:maxLines="1"
            android:textSize="20sp"
            android:layout_margin="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/row_tac_gia"/>

        <TextView
            android:id="@+id/row_tac_gia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nguyen Dang Hung"
            android:textSize="15sp"
            android:maxLines="1"
            android:textColor="@color/while_smoke"
            android:layout_marginLeft="5dp"
            app:layout_constraintTop_toBottomOf="@+id/row_ten_truyen"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="4dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/row_img_truyen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/dai_chua_te"
        android:padding="1dp"
        app:shapeAppearanceOverlay="@style/roundedImageView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="5dp"/>

</LinearLayout>